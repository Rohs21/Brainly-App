{
  "compilerOptions": {
    "module": "esnext",         // or "nodenext" if you're using Node's ESM resolver
    "target": "es2020",         // slightly more modern target
    "esModuleInterop": true,    // required for importing CommonJS modules like bcrypt
    "moduleResolution": "node", // ensure node-like resolution
    "outDir": "./dist",
    "rootDir": "./src"
  }
}
